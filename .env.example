bot_token=123456789:AA...your_bot_token_here
chat_id=-1001234567890

# PostgreSQL Database (optional - falls back to JSON if not provided)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# DB_POOL_SIZE=5
# DB_TIMEOUT_SEC=10

# Optional tuning
# SAMPLE_INTERVAL_SEC=15
# ALERT_MIN_CONSECUTIVE=3
# NODE_EXPORTER_URL=http://127.0.0.1:9100/metrics
# CPU_LOAD_PER_CORE_WARN=0.9
# MEM_AVAILABLE_PCT_WARN=0.10
# DISK_USAGE_PCT_WARN=0.85
# ENABLE_INODES=true
# INODE_FREE_PCT_WARN=0.10
# STATE_FILE=data/state.json

# RSS (optional)
# RSS_STORE_FILE=data/rss.json
# RSS_POLL_INTERVAL_SEC=300
# RSS_DIGEST_INTERVAL_SEC=3600
# RSS_DIGEST_ITEMS_PER_FEED=5
# RSS_DIGEST_MAX_TOTAL=40

# Memory Configuration
# MEMORY_CACHE_SIZE=50
# MEMORY_ALERT_THRESHOLD_MB=100
# MEMORY_WARNING_THRESHOLD_MB=50
# MEMORY_MONITORING_ENABLED=true

# Chat Access Control
# ALLOW_ANY_CHAT=false
# CONTROL_CHAT_ID=
# EXTRA_ALLOWED_CHATS=

# Modules (comma-separated). Shorthand resolves to tgbot.modules.<name>
# Default: monitoring,rss,help
# Example: monitoring,rss,help
# MODULES=monitoring,rss,help

# Node Exporter Configuration
# Options: auto (default), docker, python
NODE_EXPORTER_TYPE=auto
