[Unit]
Description=Telegram Server Monitor (Node Exporter -> Telegram)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=%h/tg-monitoring
EnvironmentFile=%h/tg-monitoring/.env
# If using a venv at %h/tg-monitoring/.venv, uncomment below and comment the next line:
# Legacy:
# ExecStart=/usr/bin/env python3 -m monitor.main
# New modular entrypoint:
ExecStart=/usr/bin/env python3 -m tgbot.main
Restart=always
RestartSec=5s
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=false
AmbientCapabilities=
CapabilityBoundingSet=

[Install]
WantedBy=multi-user.target
